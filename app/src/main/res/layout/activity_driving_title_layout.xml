<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_driving"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.dingqiqi.qijuproject.view.ScrollColorBtn
            android:id="@+id/tabbtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:btnColor="@color/colorPrimary"
            app:btnIcon="@mipmap/ic_driving_1"
            app:btnText="科目一"
            app:btnTextSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <com.dingqiqi.qijuproject.view.ScrollColorBtn
            android:id="@+id/tabbtn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:btnColor="@color/colorPrimary"
            app:btnIcon="@mipmap/ic_driving_4"
            app:btnText="科目四"
            app:btnTextSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <com.dingqiqi.qijuproject.view.ScrollColorBtn
            android:id="@+id/tabbtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:btnColor="@color/colorPrimary"
            app:btnIcon="@mipmap/ic_driving_other"
            app:btnText="专项题"
            app:btnTextSize="14sp" />


    </LinearLayout>

</LinearLayout>