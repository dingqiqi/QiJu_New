<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_item_menu_icon"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/action_settings"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_item_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_menu_icon"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_item_menu_icon"
        android:layout_toRightOf="@id/iv_item_menu_icon"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_item_menu_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_menu_icon"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/iv_item_menu_icon"
        android:layout_toRightOf="@id/iv_item_menu_icon"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

</RelativeLayout>