<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_wx_filter_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_item_wx_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_wx_filter_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_wx_filter_image1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@string/action_settings"
            android:scaleType="fitCenter"
            android:visibility="invisible" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_item_wx_filter_image2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@string/action_settings"
            android:scaleType="fitCenter"
            android:visibility="invisible" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_item_wx_filter_image3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@string/action_settings"
            android:scaleType="fitCenter"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout>