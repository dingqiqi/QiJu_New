<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/linear_two_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_two_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/colorItemBlackGray"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_two_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_two_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转"
            android:textColor="@color/colorItemBlackGray"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_two_ver_line"
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bcbcbc"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_two_weather1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阴"
            android:textColor="@color/colorItemBlackGray"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_two_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="31°/26°"
            android:textColor="@color/colorItemBlackGray"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_two_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bcbcbc" />

</LinearLayout>